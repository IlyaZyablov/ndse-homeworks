<%- include('../port/layout-start', { title: title }) %>
<%- include('../port/menu', { title: title, addBookBtn: true, profileBtn: true }) %>

<% if(books.length) { %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Название книги</th>
        <th scope="col">Действия</th>
      </tr>
    </thead>
    <tbody>
      <% books.map((el, idx) => { %>
        <tr>
            <th scope="row"><%= idx + 1 %></th>
            <td><%= el.title %></td>
            <td>
              <a class="btn btn-sm btn-primary" href="/books/<%= el.id %>">
                <i class="bi bi-info-circle-fill"></i>
              </a>
              <a class="btn btn-sm btn-warning" href="/books/update/<%= el.id %>">
                <i class="bi bi-pen"></i>
              </a>
              <form action="/books/delete/<%= el.id %>" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger">
                  <i class="bi bi-x-circle-fill"></i>
                </button>
              </form>
            </td>
        </tr>
    <% }) %>
    </tbody>
  </table>
<% } else { %>   
  <h3 class="mt-5">Список книг пуст!</h3>
<% } %>

<%- include('../port/layout-end') %>